<nav class="navbar navbar-light bg-light">
  {{#each  dashboard_profile_data}}
  <span class="navbar-brand mb-0 h1">Welcome {{this.name}} !</span>
  {{/each}}
  <a href="/logout" class="btn btn-sm btn-dark">LogOut</a>
</nav>
<br>



<div class="row">


  <!--- student profile-->



  <div class="col-sm-3 clrclass">
    <div class="row">
      <div class="col-sm-1 clrclass"></div>
      <div class="col-sm-7 clrclass ">
        <div class="card jumbotron" style="width: 18rem; overflow-y: scroll;scrollbar-width: thin; height: 590px;">
          <div class="card-body">

            <h5 class="card-title">--Profile--</h5><br>
            {{#each  dashboard_profile_data}}
            <p class="card-text"><b>Name:</b> {{this.name}}</p>
            <p class="card-text"><b>Email:</b> {{this.email}}</p>
            <p class="card-text"> <b>Class:</b> {{this.class}}</p>
            <p class="card-text"><b>Roll_No:</b> {{this.roll_no}}</p>
            <p class="card-text"> <b>Adhar_No:</b> {{this.adhar_no}}</p>
            <p class="card-text"><b>Address:</b> {{this.address}}</p>
            <p class="card-text"><b>Mobile_Number:</b> {{ this.mobile_number}}</p>
            <p class="card-text"><b>Gender:</b> {{this.gender}}</p>
            {{/each}}
            <br>
            <a href="/dshbrd/edit/{{id}}" class="btn btn-dark btn-sm btn-block">Edit</a>

          </div>
        </div>
      </div>
    </div>
  </div>





  <!---MONTHLY TEST MARK--->

  <div class="col-sm-6 clrclass">
    <div class="row">
      <div class="col-sm-12 clrclass">
        <div class="card text-center">
          <div class="card-header">
            <b>MONTHLY TEST MARK</b>
          </div>

          <div class="card-body" style="overflow-y: scroll;scrollbar-width: thin; height: 108px;">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Test_id.</th>
                  <th scope="col">Name</th>
                  <th scope="col">Phy.</th>
                  <th scope="col">Chem.</th>
                  <th scope="col">Math.</th>
                  <th scope="col">Eng.</th>
                  <th scope="col">Hindi</th>
                </tr>
              </thead>
              <tbody>
                {{#each test}}
                <tr>
                  <th scope="row">{{this._id}}</th>
                  <td>{{this.name}}</td>
                  <td>{{this.phy}}</td>
                  <td>{{this.chem}}</td>
                  <td>{{this.math}}</td>
                  <td>{{this.eng}}</td>
                  <td>{{this.hindi}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>



        </div>
      </div>
    </div><br>






    <!--EXAM MARKS (6 MONTH'S) -->
    <div class="row">
      <div class="col-sm-12 clrclass">
        <div class="card text-center ">
          <div class="card-header">
            <b> EXAM MARKS (6 MONTH'S)</b>
          </div>
          <div class="card-body" style="overflow-y: scroll;scrollbar-width: thin; height: 104px; ">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Test_id.</th>
                  <th scope="col">Name</th>
                  <th scope="col">Phy.</th>
                  <th scope="col">Chem.</th>
                  <th scope="col">Math.</th>
                  <th scope="col">Eng.</th>
                  <th scope="col">Hindi</th>

                </tr>

              </thead>
              <tbody>
                {{#each exam}}
                <tr>
                  <th scope="row">{{this._id}}</th>
                  <td>{{this.name}}</td>
                  <td>{{this.phy}}</td>
                  <td>{{this.chem}}</td>
                  <td>{{this.math}}</td>
                  <td>{{this.eng}}</td>
                  <td>{{this.hindi}}</td>

                </tr>
                {{/each}}

              </tbody>




            </table>



          </div>



        </div>
      </div>
    </div>
    <br>



    <!--- Ticket sestion--->
    <div class="row">
      <div class="col-sm-12 clrclass">
        <div class="card text-center">
          <div class="card-header">
            <b>Ticket / Application sestion </b>
          </div>
          <div class="card-body" style=" overflow-y: scroll;scrollbar-width: thin; height: 178px;">
            <form method="POST" action="/dshbrd/">
              <div class="form-group card-text">
                <label for="exampleFormControlInput1"><b>Title</b></label>
                <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Title" name="title">
              </div>
              <div class="form-group  card-text">
                <label for="exampleFormControlTextarea1"><b>Discription</b></label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Concern......"
                  name="concern"></textarea>
              </div>
              <button type="submit" class="btn btn-dark">Submit</button>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>




  <!--- ATTENDENCE-->
  <div class="col-sm-3 clrclass">
    <div class="row">

      <div class="col-sm-7 clrclass ">

        <div class="card jumbotron" style="width: 18rem; overflow-y: scroll;scrollbar-width: thin; height: 590px;">
          <div class="card-body">
            <h5 class="card-title text-center">--Class Rank--</h5>
            <p class="card-text text-center"><b>Rank:</b> <i>5th in class</i></p>
            <br>
            <h5 class="card-title text-center">-- Remark--</h5>
            <p class="card-text text-center"><b>Remark:</b> <i>Average he can do better</i> </p>
            <h5 class="card-title text-center">-- Forum--</h5>
            <a href="/discussion" class="btn btn-dark card-text text-center">Discussion Forum</a>
            <h5 class="card-title text-center">--CheckStatus--</h5>
            <button type="button" class="btn btn-dark card-text text-center" data-toggle="modal" name="button" value="check_status"
              data-target="#exampleModalCenter">CheckStatus</button>
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
              aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title text-center" id="exampleModalLongTitle">Ticket Status</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body" style=" overflow-y: scroll;scrollbar-width: thin; height: 300px;">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th scope="col">Ticket_Id</th>
                          <th scope="col">Title</th>
                          <th scope="col">Status</th>
                          <th scope="col">Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each tickets}}
                        <tr>
                          <th scope="row">{{this._id}}</th>
                          <td>{{this.title}}</td>
                          {{#if this.status}}
                          <td>Resolved</td>
                          {{else}}
                          <td>Progress</td>
                          {{/if}}

                          <td>
                            <form method="POST" action="/dshbrd/{{this._id}}?hemant=delete">
                              <button type="submit" class="btn btn-primary">Remove</button>
                            </form>
                          </td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
